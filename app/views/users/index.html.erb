<% provide :title, t("header.user_list") %>
<h1><%= t "header.user_list" %></h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <p>
        <% if user.avatar_file_name %>
          <%= link_to image_tag(user.avatar.url(:small)), @user %>
        <% else %>
          <%= gravatar_for user, size: 50 %>
        <% end %>
        <%= link_to user.name, user %>
      </p>
    </li>
  <% end %>
  <p><%= will_paginate @users %></p>
</ul>
