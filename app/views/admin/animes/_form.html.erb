<%= form_for @anime, url: yield(:url_path), html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :introdution %>
  <%= f.text_area :introdution, class: "form-control" %>

  <%= f.label :web_ratting %>
  <%= f.number_field :web_ratting, class: "form-control" %>

  <% if @genres %>
    <%= f.collection_check_boxes(:genre_ids, @genres, :id, :name)do |id| %>
      <%= id.label class:"label-checkbox" do%>
        <%= id.text %>
        <%= id.check_box %>
      <%end%>
    <% end %>
  <% end %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
